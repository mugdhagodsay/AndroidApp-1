<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_task"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <EditText
        android:id="@+id/et_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/priority_hint"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_above="@+id/btn_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/pick_date"
        android:onClick="showDatePickerDialog"
        android:id="@+id/btn_date"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText

        android:id="@+id/et_add_new_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp"
        android:padding="10dp"
        android:hint="@string/add_item_hint"
        android:background="@drawable/rounded_corner"
        android:layout_above="@+id/et_notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_notes"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/notes_hint"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_above="@+id/et_priority"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <include layout="@layout/toolbar" />


</RelativeLayout>